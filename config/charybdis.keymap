#include <dt-bindings/zmk/mouse.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

// 레이어 이름 정의

#define BASE 0
#define EXCEL 1
#define BANK 2
#define SYM 3

/ {
    // 1. 커스텀 동작 정의 (label 속성 추가됨)

    behaviors {
        // 안전한 Mod-Tap (빠른 타건 시 오동작 방지)

        mt_safe: safe_mod_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "SAFE_MOD_TAP";  // ★ 이 줄이 추가되었습니다 (필수)
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <200>;
            quick-tap-ms = <175>;
            bindings = <&kp>, <&kp>;
        };

        // 커스텀 Sticky Layer

        sl_custom: custom_sticky_layer {
            compatible = "zmk,behavior-sticky-key";
            label = "CUSTOM_STICKY_LAYER"; // ★ 이 줄이 추가되었습니다 (필수)
            #binding-cells = <1>;
            bindings = <&mo>;
            release-after-ms = <1000>;
            quick-release;
        };
    };

    // 2. 키맵 시작

    keymap {
        compatible = "zmk,keymap";

        // LAYER 0 : BASE (기본)

        base_layer {
            bindings = <
&tog BANK  &kp LG(V)  &kp LC(C)  &kp LC(V)  &kp LC(X)  &kp LS(LC(V))    &kp K_CALC     &kp PSCRN  &kp C_MUTE  &kp C_VOL_DN  &kp C_VOL_UP  &sl SYM
&kp LWIN   &kp Q      &kp W      &kp E      &kp R      &kp T            &kp Y          &kp U      &kp I       &kp O         &kp P         &none
&kp LALT   &kp A      &kp S      &kp D      &kp F      &kp G            &kp H          &kp J      &kp K       &kp L         &kp SEMI      &kp SQT
&kp LCTRL  &kp Z      &kp X      &kp C      &kp V      &kp B            &kp N          &kp M      &kp COMMA   &kp DOT       &kp FSLH      &kp LSHFT
                                 &kp ESC    &kp SPACE  &lt 1 TAB        &kp BACKSPACE  &kp ENTER
                                            &kp LCTRL  &kp LEFT_ALT     &kp DELETE
            >;
        };

        // LAYER 1 : EXCEL (숫자 & 이동)

        excel_layer {
            bindings = <
&kp F11  &kp F1     &kp F2    &kp F3    &kp F4     &kp F5       &kp F6    &kp F7  &kp F8  &kp F9  &kp F10    &kp F12
&none    &kp PG_UP  &kp HOME  &kp UP    &kp END    &kp INS      &kp FSLH  &kp N7  &kp N8  &kp N9  &kp PLUS   &none
&sl SYM  &kp PG_DN  &kp LEFT  &kp DOWN  &kp RIGHT  &kp K_APP    &kp STAR  &kp N4  &kp N5  &kp N6  &kp MINUS  &none
&kp ESC  &kp TAB    &kp BSPC  &kp DEL   &kp LC(Z)  &none        &kp N0    &kp N1  &kp N2  &kp N3  &kp EQUAL  &none
                              &trans    &trans     &trans       &trans    &trans
                                        &kp N0     &kp DOT      &trans
            >;
        };

        // LAYER 2 : BANK (왼손 텐키 & 마우스)

        bank_layer {
            bindings = <
&kp LC(W)  &kp K_BACK  &none   &none   &none   &kp ENTER    &trans  &trans  &trans  &trans  &trans  &trans
&mkp MCLK  &mkp RCLK   &kp N9  &kp N8  &kp N7  &kp N0       &trans  &trans  &trans  &trans  &trans  &trans
&kp LSHFT  &mkp MB4    &kp N6  &kp N5  &kp N4  &kp N0       &trans  &trans  &trans  &trans  &trans  &trans
&kp F5     &kp LCTRL   &kp N3  &kp N2  &kp N1  &kp DOT      &trans  &trans  &trans  &trans  &trans  &trans
                               &trans  &trans  &none        &trans  &trans
                                       &trans  &trans       &trans
            >;
        };

        // LAYER 3 : SYMBOL (기호 & 블루투스)

        symbol_layer {
            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &none      &none      &none     &none     &none     &none
&none       &kp EXCL      &kp AT        &kp HASH      &kp DLLR      &kp PRCNT       &kp CARET  &kp AMPS   &kp STAR  &kp LPAR  &kp RPAR  &none
&none       &none         &none         &none         &none         &none           &none      &none      &none     &none     &none     &none
&none       &none         &kp LBRC      &kp RBRC      &kp LBKT      &kp RBKT        &kp SEMI   &kp COLON  &none     &none     &none     &none
                                        &trans        &trans        &trans          &trans     &trans
                                                      &trans        &trans          &trans
            >;
        };
    };
};
